{
    "properties": {
        "title": "${apptitle}"
    },
    "load": {
        "bundleLocations": [
            "localbundles",
            "bundles"
        ],
        "allowedBundles": [
            "system",
            "console",
            "notifier",
            "splashscreen",
            "templatelayout",
            "template-seasons",
            "theme-everlasting",
            "theme-winter",
            "theme-spring",
            "theme-summer",
            "theme-autumn",
            "map-init",
            "map-preload-2D",
            "map-preload-3D",
            "toolset",
            "banner",
            "basemaptoggler",
            "custominfo",
            "viewmodeswitcher",
            "mapnavigation",
            "popups-default",
            "scalebar",
            "locateme",
            "printing",
            "share-link",
            "omnisearch",
            "locator-store",
            "toc",
            "sample_helloworld"
        ],
        "require": [
            "${app}.app"
        ],
        "i18n": [
            "bundle"
        ]
    },
    "bundles": {
        "banner": {
            "BannerWidget": {
                "label": "Developer Network",
                "image": "resource('${app}:/images/logo_conterra.png')",
                "imageWidth": 200,
                "imagePosition": "above",
                "link": "http://developernetwork.conterra.de"
            }
        },
        "custominfo": {
            "CustomInfoToggleTool": [
                {
                    "widgetSettings": {
                        "content": "<p>Dies ist ein Beispiel für ein Impressum.</p>",
                        "window": {
                            "marginBox": {
                                "w": 320,
                                "h": 500
                            },
                            "draggable": true,
                            "closable": true,
                            "modal": true,
                            "maximizable": false,
                            "resizable": true,
                            "title": "Impressum"
                        }
                    },
                    "type": "IMPRINT",
                    "toolClass": "ctInfo",
                    "title": "Impressum",
                    "tooltip": "Zeige Impressum",
                    "tooltipPositions": [
                        "after",
                        "above",
                        "below",
                        "before"
                    ],
                    "iconClass": "icon-custom-info-imprint",
                    "togglable": true,
                    "id": "IMPRINT_Imprint_CustomInfoTool"
                },
                {
                    "widgetSettings": {
                        "content": "<p>Dies ist ein Beispiel für ein Impressum.</p>",
                        "window": {
                            "marginBox": {
                                "w": "100%",
                                "h": "100%"
                            },
                            "draggable": true,
                            "closable": true,
                            "modal": true,
                            "maximizable": false,
                            "resizable": true,
                            "title": "Impressum"
                        }
                    },
                    "type": "IMPRINT",
                    "toolClass": "ctInfo",
                    "title": "Impressum",
                    "tooltip": "Zeige Impressum",
                    "iconClass": "icon-custom-info-imprint",
                    "togglable": true,
                    "id": "IMPRINT_Imprint_CustomInfoTool_mobile"
                }
            ]
        },
        "map-init": {
            "Config": {
                "basemaps": [
                    {
                        "id": "esri_street",
                        "title": "Straßenkarte (grau)",
                        "thumbnailUrl": "resource('${app}:/images/streets.png')",
                        "basemap": "gray-vector"
                    },
                    {
                        "id": "esri_hybrid",
                        "title": "Luftbild (hybrid)",
                        "thumbnailUrl": "resource('${app}:/images/hybrid.png')",
                        "basemap": "hybrid"
                    },
                    {
                        "id": "esri_topo",
                        "title": "Topographische Karte",
                        "thumbnailUrl": "resource('${app}:/images/topo.png')",
                        "selected": true,
                        "basemap": {
                            "type": "GROUP",
                            "layers": [
                                {
                                    "basemap": "topo-vector",
                                    "type": "AGS_VECTORTILE",
                                    "url": "https://www.arcgis.com/sharing/rest/content/items/6f65bc1351b7411588a8cb43fe23dad7/resources/styles/root.json"
                                },
                                {
                                    "id": "esri_topo1",
                                    "type": "AGS_TILED",
                                    "url": "https://services.arcgisonline.com/arcgis/rest/services/Elevation/World_Hillshade/MapServer"
                                }
                            ]
                        }
                    }
                ],
                "map": {
                    "layers": [],
                    "ground": {
                        "url": "https://elevation3d.arcgis.com/arcgis/rest/services/WorldElevation3D/Terrain3D/ImageServer",
                        "type": "ELEVATION"
                    }
                },
                "view": {
                    "viewmode": "2D",
                    "extent": {
                        "xmin": 600000,
                        "ymin": 5800000,
                        "xmax": 1700000,
                        "ymax": 7600000,
                        "spatialReference": 3857
                    }
                }
            }
        },
        "themes": {
            "ThemeModel": {
                "_selectedTheme": "everlasting"
            },
            "ThemeSelector": {
                "componentEnabled": true
            }
        },
        "templates": {
            "TemplateModel": {
                "_templates": [
                    {
                        "name": "seasons",
                        "widgets": [
                            {
                                "widgetRole": "drawer_button",
                                "attachTo": "map_topleft",
                                "props": {
                                    "layoutIndex": 0
                                }
                            },
                            {
                                "widgetRole": "sharelink",
                                "window": {
                                    "dockable": false,
                                    "dockingBar": null
                                }
                            },
                            {
                                "widgetRole": "legend",
                                "sublayout": [
                                    "mobile_portrait",
                                    "mobile_landscape"
                                ],
                                "window": {
                                    "dockable": false,
                                    "dockingBar": null
                                }
                            },
                            {
                                "widgetRole": "printing",
                                "window": {
                                    "dockable": false,
                                    "dockingBar": null
                                }
                            },
                            {
                                "widgetRole": "banner",
                                "sublayout": [
                                    "mobile_portrait"
                                ],
                                "attachTo": "footer_right"
                            }
                        ]
                    }
                ]
            }
        },
        "toolset": {
            "ToolsetManager": {
                "toolsets": [
                    {
                        "id": "mapview_tools",
                        "tools": [
                            "locateMeTool",
                            "zoomInTool",
                            "zoomOutTool",
                            "compassTool",
                            "restoreInitialViewTool",
                            "viewmodeSwitcherTool"
                        ],
                        "registerWidget": {
                            "widgetRole": "mapview_tools"
                        },
                        "container": "ignore",
                        "windowType": "container",
                        "cssClass": "muted"
                    },
                    {
                        "id": "drawer_left",
                        "title": "Werkzeuge",
                        "cssClass": "ct-main-app-menu",
                        "tools": [
                            "tocToggleTool",
                            "printingToggleTool",
                            "sharelinkTool",
                            "helloTool",
                            "IMPRINT_Imprint_CustomInfoTool",
                            "IMPRINT_Imprint_CustomInfoTool_mobile"
                        ],
                        "registerWidget": {
                            "widgetRole": "drawer_button"
                        },
                        "container": "ignore",
                        "windowType": "drawer_left"
                    }
                ]
            }
        }
    }
}
