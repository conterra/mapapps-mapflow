{
    "name": "dn_mapflow",
    "version": "4.7.2",
    "title": "Map Flow",
    "description": "The Map Flow is used to switch between layer groups which focus on certain themes.",
    "vendor": "con terra GmbH",
    "productName": "devnet-mapapps-mapflow",
    "icon": {},
    "keywords": [
        "mapping",
        "toc",
        "mapflow"
    ],
    "main": "main",
    "layer": "module",
    "i18n": [
        "bundle"
    ],
    "dependencies": {
        "dojo": "^1.14.2",
        "dijit": "^1.14.2",
        "esri": "^4.11.1",
        "ct": "^4.7.2",
        "map-widget": "^4.7.2",
        "apprt-core": "^4.7.2",
        "apprt-binding": "^4.7.2"
    },
    "optionalDependencies": {
        "windowmanager": "^4.7.2",
        "coordinatetransformer": "^4.7.2"
    },
    "CSS-Themes-Extension": [
        {
            "name": "everlasting",
            "files": ["./styles/everlasting/styles.css"]
        },{
            "name": "winter",
            "files": ["./styles/winter/styles.css"]
        },{
            "name": "summer",
            "files": ["./styles/summer/styles.css"]
        },{
            "name": "spring",
            "files": ["./styles/spring/styles.css"]
        },{
            "name": "autumn",
            "files": ["./styles/autumn/styles.css"]
        }
    ],
    "bundle": true,
    "configBundleLocation": "/config",
    "productName": "map.apps",
    "layout-widgets": [{
            "widgetRole": "mapFlow",
            "window": {
                "dockTool": "mapflowToggleTool",
                "marginBox": {
                    "h": 260,
                    "w": 750
                },
                "minimizeOnClose": true
            }
        },
        {
            "widgetRole": "mapFlow",
            "template": "seasons",
            "sublayout": [
                "desktop"
            ],
            "priority": 1,
            "window": {
                "windowClass": "noTitleBar",
                "dockable": true,
                "dockingBar": "${id}-dockingBarBottomLeft",
                "marginBox": {
                    "l": 0,
                    "h": 260,
                    "r": 0,
                    "b": 41
                },
                "resizable": false,
                "draggable": false,
                "fixEdgesInViewPort": {
                    "t": false
                }
            }
        }
    ],
    "components": [{
            "name": "MapFlow",
            "instanceFactory": true,
            "provides": ["dijit.Widget"],
            "properties": {
                "widgetRole": "mapFlow",
                "-nodeDepth": 2,
                "-showScrollBar": true,
                "-singleSelectionMode": true,
                "-autoFlipActiveCover": false,
                "-autoEnable": false,
                "-autoZoomTo": false,
                "-reactOnNewFrontCoverTimeout": 500,
                "-contentFlowProperties": {
                    "useAddOns": false,
                    "circularFlow": true,
                    "reflectionHeight": 0,
                    "maxItemHeight": 200,
                    "relativeItemPosition": "top center",
                    "visibleItems": 3
                }
            },
            "references": [{
                    "name": "_mapWidgetModel",
                    "providing": "map-widget.MapWidgetModel"
                },
                {
                    "name": "_windowManager",
                    "providing": "ct.framework.api.WindowManager",
                    "cardinality": "0..1"
                }, {
                    "name": "_coordinateTransformer",
                    "providing": "ct.api.coordinatetransformer.CoordinateTransformer",
                    "cardinality": "0..1"
                }]
        }, {
            "name": "MapFlowToggleTool",
            "impl": "ct/tools/Tool",
            "provides": ["ct.tools.Tool"],
            "propertiesConstructor": true,
            "properties": {
                "id": "mapflowToggleTool",
                "title": "${tool.title}",
                "tooltip": "${tool.tooltip}",
                "iconClass": "icon-mapflow",
                "toolRole": "toolset",
                "togglable": true,
                "rules": {
                    "noGroup": true
                }
            }
        }
    ]
},
